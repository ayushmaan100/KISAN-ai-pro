generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. User Management
model User {
  id        String   @id @default(uuid())
  phone     String   @unique
  name      String?
  role      Role     @default(FARMER)
  language  Language @default(en)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  farms     Farm[]
}

// 2. Farm Digital Twin
model Farm {
  id             String         @id @default(uuid())
  userId         String
  name           String         // e.g., "Riverside Plot"
  district       String         // Location
  state          String
  landSize       Float          // In Acres
  soilType       SoilType
  irrigationType IrrigationType
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  user    User     @relation(fields: [userId], references: [id])
  seasons Season[]
}

// 3. Crop Seasons (The core cycle)
model Season {
  id          String   @id @default(uuid())
  farmId      String
  crop        String   // e.g., "Wheat", "Rice"
  sowingDate  DateTime
  harvestDate DateTime?
  status      SeasonStatus @default(ACTIVE)
  createdAt   DateTime @default(now())
  
  farm     Farm      @relation(fields: [farmId], references: [id])
  tasks    Task[]
  expenses Expense[]
}

// 4. Tasks (Daily Activities)
model Task {
  id          String   @id @default(uuid())
  seasonId    String
  title       String   // e.g., "Apply Urea"
  description String?
  dueDate     DateTime
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())

  season Season @relation(fields: [seasonId], references: [id])
}

// 5. Financials
model Expense {
  id       String   @id @default(uuid())
  seasonId String
  category String   // e.g., "Seeds", "Fertilizer"
  amount   Float
  date     DateTime @default(now())
  note     String?

  season Season @relation(fields: [seasonId], references: [id])
}

// --- Enums for strict typing ---
enum Role {
  FARMER
  ADMIN
}

enum Language {
  en
  hi
}

enum SoilType {
  CLAY
  SANDY
  LOAMY
  BLACK
  RED
}

enum IrrigationType {
  RAINFED
  TUBEWELL
  CANAL
  DRIP
}

enum SeasonStatus {
  ACTIVE
  HARVESTED
  ABANDONED
}